<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_todo_list.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localDashboard="clr-namespace:maui_todo_list.Pages.Dashboard"
    xmlns:localSign="clr-namespace:maui_todo_list.Pages.Login"
    xmlns:localSettings="clr-namespace:maui_todo_list.Pages.Settings"
    Shell.FlyoutBehavior="Disabled">

    
    <ShellContent
        Title="SignIn"
        ContentTemplate="{DataTemplate localSign:SignIn}"
        Route="signin" />

     <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate localDashboard:Dashboard}"
        Route="dashboard" />

    
     <ShellContent
        Title="Setting Page"
        ContentTemplate="{DataTemplate localSettings:SettingsPage}"
        Route="settings" />

</Shell>

